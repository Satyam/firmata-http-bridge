{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.test.?s",
        "src/**/*.util.?s"
    ],
    "typedocOptions": {
        "out": "docs",
        "exclude": [
            "**/index.ts",
            "**/*.test.ts",
            "**/*.util.ts"
        ]
    }
}